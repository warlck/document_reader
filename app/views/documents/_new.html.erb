<h2 class= 'new_document_header'>Upload Document</h2>
<%= render :partial => "libraries/breadcrumbs" %>

 <%= form_for @document, remote: true,  :html => {:multipart => true} ,  class: "form-horizontal", role: 'form' do  |f| %>
  <% if @document.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @document.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="field form-group">
      <div class="col-sm-4">
        <%= f.file_field :uploaded_file, class: 'form-control' %>
      </div>
    </div>
    <%= f.hidden_field :folder_id %>
    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10 ">
        <%= f.submit "Upload", class: 'btn btn-default'%>
      </div>
    </div>
<% end %>

<%= render "back" %>






<script type="text/javascript">
  $('#account_settings').on('ajax:error', function(event, xhr, status) {
  // insert the failure message inside the "#account_settings" element
  $(this).append(xhr.responseText)
});
</script>