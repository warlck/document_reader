<%= form_for @folder, remote: true do |f| %> 
 <% if @folder.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @folder.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
 <p> 
    <%= f.label :name %><br /> 
    <%= f.text_field :name %> 
 </p> 
  <%= f.hidden_field :parent_id %>
  <% if @folder.new_record? %> 
     <p><%= f.submit "Create Folder" %></p> 
  <% else %>
      <p><%= f.submit "Rename Folder" %></p>
  <% end %>

<% end %> 

 <%= render "back" %>